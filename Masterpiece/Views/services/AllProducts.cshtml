@model Masterpiece.ViewModel.FilteredProductListViewModel

<form method="get" class="mb-4">
    <select name="category">
        <option value="">All Categories</option>
        @* @foreach (var cat in Model.Categories) *@
        @* { *@
        @*     <option value="@cat" selected="@(Model.SelectedCategory == cat ? "selected" : null)">@cat</option> *@
        @* } *@
    </select>
    <select name="color">
        <option value="">All Colors</option>
        @foreach (var col in Model.Colors)
        {
            <option value="@col" selected="@(Model.SelectedColor == col ? "selected" : null)">@col</option>
        }
    </select>
    <select name="size">
        <option value="">All Sizes</option>
        @foreach (var sz in Model.Sizes)
        {
            <option value="@sz" selected="@(Model.SelectedSize == sz ? "selected" : null)">@sz</option>
        }
    </select>

    <div class="filter-section">
    <h6 class="filter-title" data-bs-toggle="collapse" href="#ratingFilter" role="button">
        Customer Rating
    </h6>
    <div class="collapse show" id="ratingFilter">
            <select class="form-select" name="minRating" id="minRating" onchange="this.form.submit()">
                @for (int i = 1; i <= 5; i++)
                {
                    <option value="@i" selected="@(Model.MinRating == i ? "selected" : null)">@i & up</option>
                }
            </select>


    </div>
</div>

    <input type="number" step="0.01" name="minPrice" placeholder="Min Price" value="@Model.MinPrice" />
    <input type="number" step="0.01" name="maxPrice" placeholder="Max Price" value="@Model.MaxPrice" />
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<div class="row">
    @foreach (var product in Model.Products)
    {
        var isInWishlist = Model.WishlistProductIds.Contains(product.Id);
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">Color: @product.Color | Size: @product.Size</p>
                    <p class="card-text">Price: @product.Price.ToString("C")</p>
                    <div class="d-flex justify-content-between">
                        <form method="post" asp-controller="Wishlist" asp-action="AddToWishlist">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <button type="submit" class="btn btn-link p-0 border-0" @(isInWishlist ? "disabled" : "")>
                                <i class="bi @(isInWishlist ? "bi-heart-fill text-danger" : "bi-heart") fs-5"></i>
                            </button>
                        </form>

                        <button class="btn btn-sm btn-outline-primary" @(product.Stock == 0 ? "disabled" : "")>
                            @(product.Stock == 0 ? "Out of Stock" : "Add to Cart")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
