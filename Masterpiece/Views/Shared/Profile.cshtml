<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Masterpiece</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/editProfile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/User.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/wishlist.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   


    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick-theme.min.css">
    <!-- google  fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Abel&family=Jacques+Francois&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Abel&family=Jacques+Francois&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Abel&family=Jacques+Francois&family=League+Script&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

</head>
<body>

	<header>
		@* <nav class="navbar navbar-expand-custom navbar-mainbg"> *@
		<nav class="navbar navbar-expand-lg navbar-mainbg">

			<a class="navbar-brand navbar-logo" href="/HTML/home.html">Basma</a>
			@* <button class="navbar-toggler" type="button" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"> *@
			@*     <i class="fas fa-bars text-white"></i> *@
			@* </button> *@

			<button class="navbar-toggler" type="button" onclick="toggleNavbar()">
				<span class="navbar-toggler-icon">☰</span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav ms-auto">
					<div class="hori-selector">
						<div class="left">
						</div>
						<div class="right">
						</div>
					</div>

					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="services" asp-action="getAllProducts">Shop</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="specialOrder" asp-action="Index">Special Order</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="about">About Us</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="contact">contact us</a>
					</li>

					@if (Context.Session.GetInt32("UserId") == null)
					{

						<li class="nav-item">
							<a class="nav-link" asp-controller="User" asp-action="Register">
								<i class="fas fa-sign-in-alt"></i> Login
							</a>
						</li>
					}

					else
					{
						<li class="nav-item">
							<a class="nav-link" asp-controller="User" asp-action="Profile">
								<i class="fas fa-user"></i> Profile
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" asp-controller="User" asp-action="Logout">
								<i class="fas fa-sign-out-alt"></i> Logout
							</a>
						</li>
					}

					<li class="nav-item">
						<a class="nav-link" asp-controller="payment" asp-action="Cart">
							<i class="fas fa-shopping-cart"></i>
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="User" asp-action="addToWishlist">
							<i class="far fa-heart"></i>
						</a>
					</li>
				</ul>
			</div>
		</nav>
	</header>


<div class="container my-5">
    <div class="row">
        <!-- Sidebar (Same as previous pages) -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">My Account</h5>
                    <hr>
                    <a asp-controller="User" asp-action="Profile" class="sidebar-link active"><i class="fas fa-user"></i> Profile</a>
                        <a asp-controller="User" asp-action="resetPassword" class="sidebar-link"><i class="fas fa-map-marker-alt"></i> Reset Password</a>
                    <a asp-controller="User" asp-action="orderHistory" class="sidebar-link"><i class="fas fa-box"></i> My Orders</a>
                    <a asp-controller="User" asp-action="addToWishlist" class="sidebar-link"><i class="fas fa-heart"></i> Wishlist</a>
                   
                    <hr>
                    <a asp-controller="User" asp-action="Logout" class="sidebar-link text-danger"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </div>
            </div>
        </div>
        @RenderBody()
    </div>
</div>
    <script src="/js/profile.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>