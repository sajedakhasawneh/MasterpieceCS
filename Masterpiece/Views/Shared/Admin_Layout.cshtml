<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/Admin.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/productAdmin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Masterpiece.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header d-flex align-items-center">
            <div class="ms-2">
                <h5 class="mb-0">Admin Panel</h5>
                <small class="text-muted">Dashboard</small>
            </div>
        </div>

        <ul class="sidebar-menu">
            <li>
                <a href="#" class="active">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="viewUsers">
                    <i class="bi bi-people"></i>
                    <span>Users</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="viewProduct">
                    <i class="bi bi-box-seam"></i>
                    <span>Products</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="viewOrders">
                    <i class="bi bi-cart"></i>
                    <span>Orders</span>
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="viewCategory">
                    <i class="bi bi-graph-up"></i>
                    <span>Category</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="bi bi-envelope"></i>
                    <span>Messages</span>
                    <span class="badge bg-danger float-end mt-1">5</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </li>
        </ul>
    </div>


    <div class="container-fluid"> 
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
