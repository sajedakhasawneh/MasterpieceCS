<body>
    <header>
        @* <nav class="navbar navbar-expand-custom navbar-mainbg"> *@
		<nav class="navbar navbar-expand-lg navbar-mainbg">

            <a class="navbar-brand navbar-logo" href="/HTML/home.html">Basma</a>
            @* <button class="navbar-toggler" type="button" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"> *@
            @*     <i class="fas fa-bars text-white"></i> *@
            @* </button> *@

			<button class="navbar-toggler" type="button" onclick="toggleNavbar()">
				<span class="navbar-toggler-icon">☰</span>
			</button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                     <div class="hori-selector">
						<div class="left">
						</div> 
					 	<div class="right"> 
					</div> 
					</div> 

					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="services" asp-action="getAllProducts">Shop</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="specialOrder" asp-action="Index">Special Order</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="about">About Us</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="contact">contact us</a>
					</li>

					@if (Context.Session.GetInt32("UserId") == null)
					{
					
						<li class="nav-item">
							<a class="nav-link" asp-controller="User" asp-action="Register">
								<i class="fas fa-sign-in-alt"></i> Login
							</a>
						</li>
					}

					else {
						<li class="nav-item">
							<a class="nav-link" asp-controller="User" asp-action="Profile">
								<i class="fas fa-user"></i> Profile
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" asp-controller="User" asp-action="Logout">
								<i class="fas fa-sign-out-alt"></i> Logout
							</a>
						</li>
					}
			
						<li class="nav-item">
						<a class="nav-link" asp-controller="payment" asp-action="Cart">
								<i class="fas fa-shopping-cart"></i>
							</a>
						</li>
						<li class="nav-item">
						<a class="nav-link" asp-controller="User" asp-action="addToWishlist">
								<i class="far fa-heart"></i>
							</a>
						</li>
                </ul>
            </div>
        </nav>
    </header>
	<div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

	<footer class="text-center text-lg-start bg-body-tertiary footerContainer ">

