						<p><a href="#!" class="text-reset">Help</a></p>
					</div>

					<!-- Contact -->
					<div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-2">
						<h6 class="text-uppercase fw-bold">Contact</h6>
						<p><i class="fas fa-home me-2"></i> Irbid</p>
						<p><i class="fas fa-envelope me-2"></i> info@example.com</p>
						<p><i class="fas fa-phone me-2"></i> +962 798 902 468</p>
						<p><i class="fas fa-phone me-2"></i> +962 790 000 000</p>
					</div>

				</div>
			</div>
		</section>

		<!-- Copyright Section -->
		<div class="text-center p-2" style="background-color: #3E4235; ">
			© 2025 Basma. All Rights Reserved.
