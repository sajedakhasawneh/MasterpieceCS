@model List<Masterpiece.Models.Product>

@{
    ViewData["Title"] = "My Products";
    Layout = "/Views/Shared/Owner_Layout.cshtml"; // adjust if needed
}
<!-- Main Content -->
<div class="main-content">
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0">Product Management</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="dashboard.html">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Products</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Product Actions -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            @* <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#newProductModal">  *@
                                <a class="btn btn-primary me-2" asp-controller="Owner" asp-action="addProduct">
                                <i class="bi bi-plus-circle me-1"></i> Add New Product
                                </a>
                            @* </button> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold text-primary">All Products</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        @* <th>Category</th> *@
                                        <th>Price</th>
                                        <th>Stock</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model){
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@item.ImageUrl" class="product-img me-3" alt="@item.Name">
                                                    <div>
                                                        <h6 class="mb-0">@item.Name</h6>
                                                        @* <small class="text-muted">#PRD-001</small> *@
                                                    </div>
                                                </div>
                                            </td>
                                            @* <td>@item.Category.Name</td> *@
                                            <td>@item.Price JOD</td>
                                            <td>@item.Stock</td>
                                            <td><span class="badge badge-in-stock">In Stock</span></td>
                                            <td>
                                                <a class="btn btn-warning btn-sm" asp-action="editProduct" asp-route-id="@item.Id">
                                                    <i class="bi bi-pencil"></i>
                                                </a>

                                                <a class="btn btn-sm btn-outline-secondary me-1" asp-action="viewProduct" asp-route-id="@item.Id">
                                                    <i class="bi bi-eye"></i>
                                                </a>

                                                <a class="btn btn-danger btn-sm" asp-action="deleteProduct" asp-route-id="@item.Id">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
