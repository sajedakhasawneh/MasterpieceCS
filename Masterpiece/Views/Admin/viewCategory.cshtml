<!-- Main Content -->
<div class="main-content">
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="h3 mb-0">Category Management</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="dashboard.html">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Categories</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Product Actions -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <a class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#newProductModal" asp-action="addCategory">
                                <i class="bi bi-plus-circle me-1"></i> Add New Category
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Products Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                      
                                        <th>Img</th>
                                        <th>Category</th>
                                        <th>Action</th>
                                  
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="@item.ImageUrl" class="product-img me-3" alt="@item.Name">
                                                    @* <div> *@
                                                    @*     <h6 class="mb-0">@item.Name</h6> *@
                                                  
                                                    @* </div> *@
                                                </div>
                                            </td>
                                            <td>@item.Name</td>
                                      
                                            <td>

                                                <a class="btn btn-warning btn-sm" asp-action="editCategory" asp-route-id="@item.Id">
                                                    <i class="bi bi-pencil"></i> 
                                                </a>

                                                <a class="btn btn-sm btn-outline-secondary me-1" asp-action="viewCategory" asp-route-id="@item.Id">
                                                    <i class="bi bi-eye"></i>
                                                </a>

                                                <a class="btn btn-danger btn-sm" asp-action="deleteCategory" asp-route-id="@item.Id">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                                                