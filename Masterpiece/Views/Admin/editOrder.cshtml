@model Masterpiece.ViewModel.EditOrderStatusViewModel

@{
    ViewData["Title"] = "Edit Order Status";
    var statusOptions = new List<SelectListItem>
    {
        new SelectListItem { Text = "Pending", Value = "pending" },
        new SelectListItem { Text = "Shipped", Value = "shipped" },
        new SelectListItem { Text = "Delivered", Value = "delivered" },
        new SelectListItem { Text = "Cancelled", Value = "cancelled" }
    };
}



<div class="main-content">
    <div class="container-fluid py-4">

        <div class="row">
            <div class="col-12 mb-4">
                <div class="card">
<h2>Edit Order Status</h2>

<form asp-action="editOrder" method="post">
    <input type="hidden" asp-for="OrderId" />

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control" asp-items="statusOptions"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="viewOrders" class="btn btn-secondary">Cancel</a>
</form>

                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
