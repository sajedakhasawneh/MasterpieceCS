@model Masterpiece.ViewModel.changePasswordVM

@{
    ViewData["Title"] = "Reset Password";
    Layout = "/Views/Shared/Profile.cshtml";
}

<div class="col-md-9">
    <div class="card profile-card mb-4">
        <div class="card-body text-center py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <form asp-action="resetPassword"> 
             <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
            <div class="form-section">
                <h4 class="section-title">Change Password</h4>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="OldPassword" class="form-label">Current Password</label>
                            <input asp-for="OldPassword" type="password" class="form-control" id="currentPassword">
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">New Password</label>
                            <input asp-for="NewPassword" class="form-control" id="newPassword">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <div>
                    <a asp-action="Profile" class="btn btn-outline-secondary me-2">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>
</div>
</div>