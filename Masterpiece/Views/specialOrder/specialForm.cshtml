@model Masterpiece.ViewModel.SpecialOrderViewModel



<section class="design-hero text-center">
    <div class="container">
        <h1 class="display-4 fw-bold mb-4">Custom Design Request</h1>
        <p class="lead">Get a unique handmade product crafted just for you</p>
    </div>
</section>

<div class="container-fluid mb-5">
    <div class="row">
        <!-- Main Form Column -->
        <div class="col-lg-8">
            <div class="form-section">
                <h2 class="mb-4">Design Details</h2>

                <form asp-action="specialForm" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <!-- Product Type Selection -->
                    <div class="mb-4">
                        <label class="form-label">1. What type of product are you looking for?</label>
                        <div class="d-flex flex-wrap">
                            @foreach (var cat in Model.Categories)
                            {
                                <label class="category-badge">
                                    <input type="radio" name="SelectedCategory" value="@cat" hidden required />
                                    @cat
                                </label>
                            }
                        </div>
                    </div>

                    <!-- Design Inspiration -->
                    <div class="mb-4">
                        <label class="form-label">2. Design Inspiration</label>
                        <div class="upload-area">
                            <p>Drag & drop your inspiration images here or click to browse</p>
                            <input asp-for="DesignUpload" type="file" accept="image/*" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="DesignDescription" class="form-label">Describe your design</label>
                            <textarea asp-for="DesignDescription" class="form-control"></textarea>
                        </div>
                    </div>

                    <!-- Product Details -->
                    <div class="mb-4">
                        <label class="form-label">3. Product Details</label>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Size</label>
                                <select asp-for="ProductSize" class="form-select">
                                    <option value="">Choose size</option>
                                    <option>Small</option>
                                    <option>Medium</option>
                                    <option>Large</option>
                                    <option>Custom</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Color Theme</label>
                                <select asp-for="ProductColor" class="form-select">
                                    <option value="">Choose color</option>
                                    <option>White</option>
                                    <option>Beige</option>
                                    <option>Pastel Colors</option>
                                    <option>Vibrant Colors</option>
                                    <option>Custom</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <!-- Price Range -->
                    <div class="mb-4">
                        <label class="form-label">4. Budget Range</label>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="MinBudget" class="form-label">Minimum Budget</label>
                                <input asp-for="MinBudget" class="form-control" type="number" min="0"  />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MaxBudget" class="form-label">Maximum Budget</label>
                                <input asp-for="MaxBudget" class="form-control" type="number" min="0"  />
                            </div>
                        </div>
                    </div>

                    <!-- Occasion & Timeline -->
                    <div class="mb-4">
                        <label class="form-label">4. Occasion & Timeline</label>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="ProductOccasion" class="form-label">Occasion</label>
                                <select asp-for="ProductOccasion" class="form-select" asp-items="@(new SelectList(Model.Occasions))">
                                    <option value="">-- Select Occasion --</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="NeededBy" class="form-label">Needed by date</label>
                                <input asp-for="NeededBy" type="date" class="form-control" required />
                            </div>
                        </div>
                    </div>

                    <!-- Contact Information -->
                    <h3 class="mt-5 mb-4">5. Your Information</h3>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label asp-for="CustomerName" class="form-label">Full Name</label>
                            <input asp-for="CustomerName" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="CustomerEmail" class="form-label">Email Address</label>
                            <input asp-for="CustomerEmail" class="form-control" type="email" required />
                        </div>
                    </div>
                    <div class="mb-4">
                        <label asp-for="AdditionalNotes" class="form-label">Additional Notes</label>
                        <textarea asp-for="AdditionalNotes" class="form-control"></textarea>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Submit Request</button>
                    </div>
                </form>


            </div>
        </div>

        <!-- Features Column -->
        <div class="col-lg-4">
            <div class="sticky-top" style="top: 20px;">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h3 class="h4 mb-4">How It Works</h3>
                        <div class="d-flex mb-4">
                            <div class="flex-shrink-0">
                                <i class="fas fa-pencil-alt feature-icon"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h4 class="h5">Submit Your Request</h4>
                                <p class="mb-0">Fill out this form with all your design details and preferences.</p>
                            </div>
                        </div>
                        <div class="d-flex mb-4">
                            <div class="flex-shrink-0">
                                <i class="fas fa-comments feature-icon"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h4 class="h5">Design Consultation</h4>
                                <p class="mb-0">We'll contact you to discuss your request and finalize details.</p>
                            </div>
                        </div>
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-truck feature-icon"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h4 class="h5">Receive Your Creation</h4>
                                <p class="mb-0">Your custom handmade product will be delivered to your door.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h3 class="h4 mb-4">Have Questions?</h3>
                        <p>Our team is happy to help with any questions about custom orders.</p>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-phone me-2"></i> (962) 798902468</li>
                            <li><i class="fas fa-envelope me-2"></i> custom@handcrafted.com</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        const badges = document.querySelectorAll('.category-badge');

        badges.forEach(badge => {
            badge.addEventListener('click', () => {
                // Unselect all first
                badges.forEach(b => b.classList.remove('selected'));

                // Then select clicked one
                badge.classList.add('selected');

                // Manually check the input
                const input = badge.querySelector('input[type="radio"]');
                if (input) {
                    input.checked = true;
                }
            });
        });
    });
</script>
